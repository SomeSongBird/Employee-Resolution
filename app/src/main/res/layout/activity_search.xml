<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    android:background="@color/black"
    tools:context=".SearchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensor_num"
        style="@style/Text"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:background="@color/offwhite">
        <EditText
            android:id="@+id/empToRetrieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="499984"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp" />
    </FrameLayout>


    <Button
        android:id="@+id/retrieveData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="retrieveData"
        android:text="@string/retrieve_button"
        android:shadowColor="@color/background_green"
        android:shadowRadius="1.5"/>

    <TableLayout
        android:id="@+id/table"
        android:stretchColumns="1"
        android:paddingVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="@color/black" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/FirstName"
                android:text="@string/guessImDoingThis"
                style="@style/Text"/>

            <TextView
                android:id="@+id/firstNameData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/Text" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_gravity="left">
            <TextView
                android:id="@+id/lastName"
                android:text="@string/mightAsWell"
                style="@style/Text"/>

            <TextView
                android:id="@+id/lastNameData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/Text" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_gravity="left">
            <TextView
                android:id="@+id/hireDate"
                android:text="@string/ohBoyAntoherone"
                style="@style/Text"/>

            <TextView
                android:id="@+id/hireDateData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/Text" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/Error"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/Text" />

</LinearLayout>